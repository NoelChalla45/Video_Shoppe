# ── Database ────────────────────────────────────────────────────
# Copy this file to .env and fill in your values

# Get these from: https://console.prisma.io → your project → "Connection string"
# DATABASE_URL uses the Prisma Accelerate proxy (required for Prisma Postgres)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_PRISMA_POSTGRES_API_KEY"

# DIRECT_URL is the direct postgres connection (used for migrations/db push)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ── Auth ─────────────────────────────────────────────────────────
# Generate a strong random string, e.g.: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="replace_this_with_a_long_random_secret"

# ── Server ───────────────────────────────────────────────────────
PORT=5000
CLIENT_URL=http://localhost:5173
